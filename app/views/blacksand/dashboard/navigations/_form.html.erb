<%= bootstrap_form_for(@navigation) do |f| %>

    <%= f.text_field :name %>
    <%= f.text_field :url %>
    <%= f.text_field :position %>

    <% if @navigation.page_id %>
        <%= f.select :page_id, [[@navigation.page.title, @navigation.page_id]] %>
    <% else %>
        <%= f.select :page_id, [] %>
    <% end %>

    <%= f.form_group do %>
        <%= f.primary %>
    <% end %>
<% end %>
